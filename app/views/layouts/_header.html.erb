<style>

a, button{
	font-family: Francois One;
}

a.active, button.btn{
	margin-top: 2px;
	font-size: 15px;
}
a.navbar-brand{
	font-size: 25px;
}

</style>

<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Francois+One" />

<nav class="navbar navbar-default" role=navigation" style= "border-bottom: 7px #286da8 double; ">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to "Rentals.", root_path, class: "navbar-brand" %>
		</div>

	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		<ul class="nav navbar-nav">
			<% if user_signed_in? %>
				<li><%= link_to "New Rental.", new_rental_path, class:"active" %></li>
				<li><%=link_to "Account.", current_user, class:"active" %></li>
			<% else %>
				<li><%= link_to "Sign Up.", new_user_registration_path, class: "active" %></li>
				<li><%= link_to "Sign In.", new_user_session_path, class: "active" %></li>
			<% end %>
		</ul>
		
		<div class="nav navbar-nav" style="float:right;">
		<%= form_tag search_rentals_path do %>			
			<form class="navbar-form navbar-right" role="search" >
				<div class="form-group nav navbar-nav">
					<input id= "searchbar" name = "query" type="text" class="form-control"  placeholder="Search" style="margin-top: 10px; width: 300px;">
				</div>
				<button type="submit" class="btn btn-default" style="margin-top: 10px; margin-left: 7px;">Search</button>
			</form>
		<%end%>
		</div>

		</div>
	</div>
</nav>	

